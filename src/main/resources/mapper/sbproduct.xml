<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.library.bookhub.repository.SubscriptionProductRepository">

	<insert id="insert">

		insert into bh_subscription_product(prodName, price,
		period)
		values(#{prodName}, #{price}, #{period})

	</insert>



	<select id="getProductTotalCount" resultType="int">
		SELECT COUNT(*)
		FROM
		BH_SUBSCRIPTION_PRODUCT
	</select>
	
	
	
	<select id="findAll"
		resultType="com.library.bookhub.entity.SubscriptionProduct">
		SELECT * FROM BH_SUBSCRIPTION_PRODUCT 
	    LIMIT #{limit} OFFSET #{offset}
	</select>
	
	
	<select id="findAllNoPage"
		resultType="com.library.bookhub.entity.SubscriptionProduct">
		SELECT * FROM BH_SUBSCRIPTION_PRODUCT 
	</select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.bookhub.repository.UserRepository">

    <select id="findAll" resultType="com.library.bookhub.entity.User">
        SELECT * FROM bh_member
    </select>
    
 <select id="findAllWithPagingAndUsername" resultType="com.library.bookhub.entity.User">
    SELECT * FROM bh_member WHERE LOWER(name) LIKE CONCAT('%', LOWER(#{name}), '%') LIMIT #{limit} OFFSET #{offset}
</select>


   <select id="getTotalCount" resultType="int">
    SELECT COUNT(*) FROM bh_member;
</select>


</mapper>
